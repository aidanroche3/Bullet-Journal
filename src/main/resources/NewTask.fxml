<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Scene xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="390.0" prefWidth="389.0">
        <children>
            <Label layoutX="138.0" layoutY="14.0" text="New Task">
                <font>
                    <Font size="27.0" />
                </font></Label>
            <MenuButton fx:id="day" layoutX="166.0" layoutY="61.0" mnemonicParsing="false" text="Day">
                <items>
                    <MenuItem mnemonicParsing="false" text="Monday" />
                    <MenuItem mnemonicParsing="false" text="Tuesday" />
                    <MenuItem mnemonicParsing="false" text="Wednesday" />
                    <MenuItem mnemonicParsing="false" text="Thursday" />
                    <MenuItem mnemonicParsing="false" text="Friday" />
                    <MenuItem mnemonicParsing="false" text="Saturday" />
                    <MenuItem mnemonicParsing="false" text="Sunday" />
                </items>
            </MenuButton>
            <Label layoutX="38.0" layoutY="108.0" prefHeight="27.0" prefWidth="59.0" text="Name:">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>
            <TextField fx:id="name" layoutX="115.0" layoutY="109.0" />
            <Label layoutX="8.0" layoutY="160.0" prefHeight="27.0" prefWidth="107.0" text="Description:">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>
            <TextField fx:id="description" layoutX="115.0" layoutY="160.0" />
            <MenuButton fx:id="status" layoutX="126.0" layoutY="209.0" mnemonicParsing="false" text="Completion Status">
                <items>
                    <MenuItem mnemonicParsing="false" text="Incomplete" />
                    <MenuItem mnemonicParsing="false" text="Complete" />
                </items>
            </MenuButton>
            <ImageView fitHeight="81.0" fitWidth="75.0" layoutX="30.0" layoutY="290.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@images/skull.gif" />
                </image>
            </ImageView>
            <Button fx:id="cancel" layoutX="176.0" layoutY="315.0" mnemonicParsing="false" text="Cancel" />
            <Button fx:id="confirm" layoutX="318.0" layoutY="315.0" mnemonicParsing="false" text="Confirm" />
        </children></AnchorPane>
</Scene>
